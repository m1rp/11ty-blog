      <h1>{{ title }}</h1>
      {% if introduction %}
      <p> {{introduction}} </p> 
      {% endif %}
      <i>{{ date}}</i>
    </section>

    <section class="content" id="content">
    {{ content | safe}}
    </section>

  </article>
{% endblock %}