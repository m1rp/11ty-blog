{% extends "layouts/base.njk" %}

{% block content%}
<section class="intro">
      {{ content |safe }}
</section>

<section>  
  <h2>Latest posts</h2>
    {% for post in collections.posts %}
    {% if loop.index0 < 3 %}
      {% include 'partials/article-card.njk' %}
      {%endif%}
  {% endfor %}
</section>

{% if reading | length > 0%}
<section>
  <h2>Right now I'm reading:</h2>
{%set books = reading %}
{% include "partials/books.njk" %}
<h4><a href="/bookshelf">Check out</a> what else I've read this year!</h4>
</section>
{% endif %}

{% endblock content%}
