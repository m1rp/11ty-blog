<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="shortcut icon" href="/img/favicon.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon-16x16.png">
  
  <meta name="Title" content="smcllw.me">
  <link rel="stylesheet" href="/static/css/normalize.css">
  <link rel="stylesheet" href="/static/css/main.css">
  <link rel="stylesheet" href="/static/css/prism-ally-dark.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:700&display=swap" rel="stylesheet" defer>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,700;1,400&display=swap" rel="stylesheet" defer>
  <link rel="canonical" href="https://smcllw.me{{page.url}}"/> 
  <link rel="alternate" type="application/rss+xml" href="https://smcllw.me/feed.xml" title="RSS Feed">

  {# webmention setup #}
  <link href="https://twitter.com/samclulow" rel="me">
  <link href="https://github.com/m1rp" rel="me">
  <link rel="webmention" href="https://webmention.io/smcllw.me/webmention" />
  <link rel="pingback" href="https://webmention.io/smcllw.me/xmlrpc" />
  {# syndication #}
  <meta name="twitter:creator" content="@samclulow" />
  <meta property="og:url" content="https://smcllw.me{{page.url}}" />
  <meta property="og:title" content="{{title}}" />
  <meta property="og:site_name" content="smcclw.me" />
  {%if introduction%}
  <meta property="og:description" content="{{introduction | safe}}" />
  <meta name="twitter:card" content="{{introduction | safe}}" />
  {%endif%}
  {%if page.url.includes('post')%}
  <meta property="og:type" content="article" />
  {%elif page.url.includes('til/')%}
  <meta property="og:type" content="small article" />
  {%endif%}
  {%if page.date%}
  <meta property="article:published_time" content="{{page.date}}" />
  {%endif%}
  <title>{{title}} </title>
</head>
